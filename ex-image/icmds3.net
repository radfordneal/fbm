#!/bin/bash

# Commands to apply Bayesian neural network to an image classification problem.
# This version uses one hidden layer with convolutional connections and a
# second hidden layer fully connected to the first hidden layer.  Only the
# second hidden layer connects to the outputs.
#
# Four runs are done, each on three quarters of the training set, with
# the left-out quarters used to assess things like convergence.  Final
# testing is done on the cases not in the training set.

for run in 1 2 3 4; do

  log=ilog3.net$run
  end=`calc 300\*$run`
  start=`calc $end-299`

  net-spec $log 36 80 input-config:iconfig 12 4 \
    / ih=0.2:2 bh0=0.2:2 hh=0.1:3::4 bh1=0.2:2 ho1=0.3:2::4 bo=0.1:2
  model-spec $log class
  
  data-spec $log 36 1 4 / idata-train@-$start:$end . idata-train@$start:$end .

  rand-seed $log $run
  
  net-gen $log fix 0.1$run

  mc-spec $log repeat 30 heatbath hybrid 100:10 0.07
  net-mc $log 1
  
  mc-spec $log sample-sigmas heatbath hybrid 3000:300 0.09
  net-mc $log 6000 &

done

wait
  
net-pred mnpa \
  ilog3.net1 2001: ilog3.net2 2001: ilog3.net3 2001: ilog3.net4 2001: \
    / idata-test .
